---
import { getOgpData, type OgpData } from '../utils/ogp';

interface Props {
  url: string;
  // キャッシュ制御（開発中に便利）
  noCache?: boolean;
}

const { url, noCache = false } = Astro.props;

// OGP情報を取得
let ogpData: OgpData | null = null;

// ビルド時にOGP情報を取得する
try {
  // キャッシュは削除し、毎回OGP情報を取得するシンプルな実装に変更
  ogpData = await getOgpData(url);
} catch (error) {
  console.error(`Error fetching OGP data for ${url}:`, error);
}

// OGP情報が取得できない場合のフォールバック
if (!ogpData) {
  ogpData = {
    url,
    title: url,
    description: 'リンク先の情報を取得できませんでした',
    image: '',
    siteName: new URL(url).hostname,
    favicon: '',
  };
}
---

<a href={url} target="_blank" rel="noopener noreferrer" class="link-card">
  <div class="card-container">
    <div class="content">
      <h3 class="title">{ogpData.title}</h3>
      <p class="description">{ogpData.description}</p>
      <div class="site">
        {ogpData.favicon && (
          <img 
            src={ogpData.favicon} 
            alt="" 
            class="favicon" 
            width="16" 
            height="16" 
            onerror="this.style.display='none'"
          />
        )}
        <span class="site-name">{ogpData.siteName}</span>
      </div>
    </div>
    {ogpData.image && (
      <div class="image">
        <img 
          src={ogpData.image} 
          alt="" 
          width="120" 
          height="120" 
          loading="lazy" 
          decoding="async"
          onerror="this.style.display='none'"
        />
      </div>
    )}
  </div>
</a>

<style>
  .link-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: border-color 0.2s ease;
    margin: 1.5rem 0;
  }

  .link-card:hover {
    border-color: #cbd5e0;
  }

  .card-container {
    display: flex;
    padding: 0.75rem;
    background-color: #f8fafc;
  }

  .content {
    flex: 1;
    min-width: 0;
    padding-right: 1rem;
  }

  .title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .description {
    font-size: 0.875rem;
    margin: 0 0 0.5rem 0;
    color: #4a5568;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .site {
    display: flex;
    align-items: center;
    font-size: 0.75rem;
    color: #718096;
  }

  .favicon {
    margin-right: 0.25rem;
    flex-shrink: 0;
  }

  .site-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .image {
    width: 120px;
    height: 120px;
    flex-shrink: 0;
    background-color: #e2e8f0;
    border-radius: 0.25rem;
    overflow: hidden;
  }

  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 640px) {
    .image {
      width: 80px;
      height: 80px;
    }
    
    .description {
      -webkit-line-clamp: 1;
    }
  }
</style>

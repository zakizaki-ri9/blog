---
interface Props {
  url: string;
  title?: string;
  description?: string;
}

const { url, title, description } = Astro.props;

// ドメイン名を抽出
let domain = '';
try {
  domain = new URL(url).hostname;
} catch {
  domain = url;
}

// 表示用タイトル（指定がない場合はドメインまたはURLを表示）
const displayTitle = title || domain || url;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="link-card">
  <div class="card-container">
    <div class="content">
      <h3 class="title">{displayTitle}</h3>
      {description && <p class="description">{description}</p>}
      <div class="site">
        <span class="site-name">{domain}</span>
      </div>
    </div>
  </div>
</a>

<style>
  .link-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: border-color 0.2s ease;
    margin: 1.5rem 0;
  }

  .link-card:hover {
    border-color: #cbd5e0;
  }

  .card-container {
    display: flex;
    padding: 0.75rem;
    background-color: #f8fafc;
  }

  .content {
    flex: 1;
    min-width: 0;
  }

  .title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .description {
    font-size: 0.875rem;
    margin: 0 0 0.5rem 0;
    color: #4a5568;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .site {
    display: flex;
    align-items: center;
    font-size: 0.75rem;
    color: #718096;
  }

  .site-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .description {
      -webkit-line-clamp: 1;
    }
  }
</style>
